        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
        <property name="hibernate.connection.password">crx</property>
        <property name="hibernate.connection.url">jdbc:Oracle:thin:@127.0.0.1:1521/CRX</property>
        <property name="hibernate.connection.username">CRX</property>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
        <property name="hibernate.default_schema">CRX</property>
        <property name="hibernate.search.autoregister_listeners">false</property>
        <mapping resource="com/main/htarget/FundamentoNormativa.hbm.xml" />
        <mapping resource="com/main/htarget/TipoFundamento.hbm.xml" />
    </session-factory>
